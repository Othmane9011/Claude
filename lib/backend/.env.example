# =================================
# VetHome API Configuration
# =================================

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/vethome?schema=public"

# JWT
JWT_ACCESS_SECRET="your-access-secret-here"
JWT_REFRESH_SECRET="your-refresh-secret-here"
JWT_ACCESS_TTL="900s"
JWT_REFRESH_TTL="7d"

# Server
PORT=3000
NODE_ENV=development

# Redis (optional - for caching)
REDIS_URL="redis://localhost:6379"

# =================================
# Storage Configuration
# =================================

# Storage provider: 'local' or 's3'
STORAGE_PROVIDER=local

# Public URL for local storage (used behind reverse proxy)
# Example: https://api.yourdomain.com
PUBLIC_URL=

# =================================
# S3 / OVH Object Storage
# =================================

# OVH Object Storage (S3-compatible)
# Region: gra (Gravelines), sbg (Strasbourg), bhs (Beauharnois), etc.
AWS_REGION=gra

# OVH S3 endpoint
# Format: https://s3.<region>.cloud.ovh.net
S3_ENDPOINT=https://s3.gra.cloud.ovh.net

# Your bucket name
S3_BUCKET=vethome-uploads

# Public endpoint for accessing files (same as S3_ENDPOINT for OVH)
S3_PUBLIC_ENDPOINT=https://s3.gra.cloud.ovh.net

# OVH credentials (from OpenStack/S3 credentials)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Force path-style URLs (required for OVH)
S3_FORCE_PATH_STYLE=true

# Use object ACL for public-read (set to false if bucket policy handles it)
S3_USE_OBJECT_ACL=false

# =================================
# How to get OVH S3 credentials:
# =================================
# 1. Go to OVH Control Panel > Public Cloud > Object Storage
# 2. Create a container (bucket)
# 3. Go to Users & Roles > Generate S3 credentials
# 4. Use the Access Key and Secret Key provided
# =================================
